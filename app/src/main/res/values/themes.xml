<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.Theme.Parent" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_scrim</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.AppCompat.Dialog.Alert</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="Platform.Theme.Parent">
        <item name="colorSurface">@color/background</item>
        <item name="colorSurfaceContainer">@color/background</item>
        <item name="colorOnPrimarySurface">@color/color_accent</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/font_medium</item>
    </style>

</resources>
